{
  "extends": [ "axway/env-node", "axway/env-titanium", "axway/+mocha"],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "script"
  },
  "globals": {
    "Ti": false,
    "Titanium": false,
    "global": false,
    "__filename": false,
    "__dirname": false
  },
  "rules": {
    "no-implicit-globals": "off"
  },
  "overrides": [
    {
      "files": [ "plugins/*/hooks/*.js" ],
      "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
      }
    },
    {
      "files": [ "Resources/es6.*.js" ],
      "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
      }
    },
    {
      "files": [ "dangerfile.js" ],
      "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
      }
    }
  ]
}
